# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /collect                    controllers.Application.index()
GET	    /classification             controllers.Application.classification()
GET     /emotion                    controllers.Application.emotion()
GET     /emotion/plot/:plotType 	controllers.Application.handlePlot(plotType)
POST    /                           controllers.Application.postIndex()
POST    /emotion                    controllers.Application.postEmotion()
POST    /classification             controllers.Application.postClassification()
POST    /save/:dataType             controllers.Application.saveData(dataType)
POST    /emotion/upload             controllers.Application.handleUpload()

# GET     /preprocess                 controllers.Application.preprocess()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

GET    /javascriptRoutes    controllers.Application.javascriptRoutes
